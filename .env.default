# =========================
# Discord Bot Configuration
# =========================

DISCORD_TOKEN=                  # Discord bot token
OWNER_ID=                      # Discord user ID of the bot owner
GITHUB_REPO=                   # GitHub repository link

# =========================
# Database Configuration
# =========================

DB_TYPE=sqlite                 # Database type: sqlite or mysql

# SQLite settings
SQLITE_DB=                     # SQLite database file path

# MySQL settings
MYSQL_HOST=                    # MySQL host
MYSQL_PORT=                    # MySQL port
MYSQL_USER=                    # MySQL username
MYSQL_PASSWORD=                # MySQL password
MYSQL_DB=                      # MySQL database name

# Database backup settings
DATABASE_BACKUP_DIRECTORY=data/backups      # Directory for database backups
DATABASE_BACKUP_FILENAME="lancobot_backup_{}.db"  # Backup filename pattern
DATABASE_BACKUP_INTERVAL=86400              # Backup interval in seconds

# =========================
# API Keys
# =========================

GMAPS_API_KEY=                 # Google Maps API key

# Weather APIs
OPENWEATHERMAP_API_KEY=        # OpenWeatherMap API key
OPENCAGE_API_KEY=              # OpenCage Geocoding API key

# Spotify API
