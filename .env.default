# AI & Data APIs
OPENAI_API_KEY=                # OpenAI API key
WOLFRAM_ALPHA_API_KEY=         # Wolfram Alpha API key
VIRUS_TOTAL_API_KEY=           # VirusTotal API key

# Logging
